@model IEnumerable<login.Models.Typesmed>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CATEGORY</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        .table th {
            background-color: #343a40;
            color: #fff;
        }
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f8f9fa;
        }
        h6 {
            text-align: center;
            font-size: x-large;
            margin-top: 20px;
        }
        .table td, .table th {
            padding: 15px;
        }
    </style>
</head>
<body>

<header>
    <nav class="header-nav">
        <a class="btn btn-info" href="@Url.Action("homepage", "Authed")">
            <i class="fas fa-house"></i> Home
        </a>
        <a class="create-link btn btn-success" asp-action="Create">Create New</a>
    </nav>
</header>

<main>
    <div class="container">
        <h6 class="text-center" style="font-size: x-large; margin-top: 20px;">GenericName</h6>
        <br>
        <table id="myTable" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a class="btn btn-sm edit-link" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                @* <a class="btn btn-sm delete-link" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a> *@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

<!-- Include jQuery and DataTables -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function() {
        $('#myTable').DataTable();
    });
</script>

</body>
</html>
